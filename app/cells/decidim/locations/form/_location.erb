<% location = form.object %>

<div class="card location-item" id="<%= tabs_id %>-field">
  <div class="card-divider location-item-divider">
    <h2 class="card-title">
      <span>
        <%= t(".location") %>
      </span>

      <button class="button small alert hollow remove-location-item button--title">
        <%= t(".remove") %>
      </button>
    </h2>
  </div>

  <div class="card-section">
    <%= render partial: "decidim/locations/form/location_fields", locals: { tabs_id: tabs_id, form: form, location: location } %>
  </div>
</div>
